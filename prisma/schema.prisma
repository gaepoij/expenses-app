generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = ""
}

model User {
  id       Int       @id @default(autoincrement())
  uid      String    @unique(map: "unique_uid")
  name     String?
  email    String?
  expenses Expense[]

  @@index([uid])
  @@map("user")
}

model Expense {
  id         String  @id @default(uuid())
  name       String
  price      Decimal
  billingDay Int
  user       User    @relation(fields: [userId], references: [id])
  userId     Int

  createdAt DateTime @default(now())

  @@map("expense")
}
